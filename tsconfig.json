{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2022",
		"lib": ["ES2022"],
		"sourceMap": true,
		"rootDir": "src",
		"outDir": "out",           // Add an output directory if you are compiling
		"strict": true,
		"esModuleInterop": true,   // Needed for some import/export operations
		"skipLibCheck": true       // Optional: To speed up build time by skipping library checking
	},
	"include": ["src/**/*"]       // Ensure all TypeScript files in src are included
}
