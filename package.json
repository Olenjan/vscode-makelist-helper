{
  "name": "vscode-makelist-helper",
  "displayName": "vscode_makelist_helper",
  "description": "Helps user add files to CMakeLists.txt",
  "version": "0.0.13",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [{
        "command": "vscode-makelist-helper.addToCMake",
        "title": "Add to CMakeLists.txt"
    }],
    "menus": {
        "explorer/context": [{
            "when": "resourceExtname =~ /\\.(cpp|hpp|h)$/",
            "command": "vscode-makelist-helper.addToCMake",
            "group": "1_modification"
        }]
    },
    "configuration": {
        "title": "CMakeLists Helper",
        "properties": {
            "vscode-makelist-helper.setFileMapping": {
                "type": "object",
                "default": {
                    ".h": "HEADERS",
                    ".hpp": "HEADERS",
                    ".hxx": "HEADERS",
                    ".cpp": "SOURCES",
                    ".cxx": "SOURCES",
                    ".cc": "SOURCES"
                },
                "description": "Map file extensions to CMake set() variable names"
            }
        }
    }
},

"repository": {
  "type": "git",
  "url": "https://github.com/YOUR_USERNAME/cmake-file-manager.git"
},
"license": "MIT",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "ts-loader": "^9.5.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
